<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/green_triangle"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:src="@drawable/green_triangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="LOG IN"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/green_triangle"
        app:layout_constraintStart_toStartOf="@+id/green_triangle"
        app:layout_constraintEnd_toEndOf="@+id/green_triangle"
        android:textSize="20sp"
        />
    <ImageView
        android:id="@+id/owl"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:src="@drawable/owl"
        app:layout_constraintBottom_toBottomOf="@id/green_triangle"
        app:layout_constraintStart_toStartOf="@id/green_triangle"
        app:layout_constraintEnd_toEndOf="@id/green_triangle"
        app:layout_constraintTop_toTopOf="@id/green_triangle"
        android:layout_marginBottom="30dp"/>
    <TextView
        android:id="@+id/name_of_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "Trivia"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/owl"
        app:layout_constraintStart_toStartOf="@id/owl"
        app:layout_constraintEnd_toEndOf="@id/owl"
        android:textSize="30sp" />
    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login with Facebook"
        app:layout_constraintTop_toBottomOf="@id/green_triangle"
        app:layout_constraintEnd_toEndOf="@id/green_triangle"
        app:layout_constraintStart_toStartOf="@id/green_triangle"
        android:backgroundTint="@color/white"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        android:textColor="@color/black"
        android:layout_gravity="bottom|center_horizontal"
        />
    <TextView
        android:id="@+id/or_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--- OR ---"
        app:layout_constraintTop_toBottomOf="@id/login_button"
        app:layout_constraintStart_toStartOf="@id/login_button"
        app:layout_constraintEnd_toEndOf="@id/login_button"
        android:textColor="#808080"

        />
    <Button
        android:id="@+id/login_with_email_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Up with Email"
        app:layout_constraintTop_toBottomOf="@id/or_text"
        app:layout_constraintEnd_toEndOf="@id/or_text"
        app:layout_constraintStart_toStartOf="@id/or_text"
        android:backgroundTint="@color/white"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        android:textColor="@color/black"
        android:layout_gravity="bottom|center_horizontal"
        />
    <Button
        android:id="@+id/game_button"
        android:layout_width="300dp"
        android:layout_height="43dp"
        android:textSize="20sp"
        android:text="GAME NOW"
        app:layout_constraintTop_toBottomOf="@id/login_with_email_button"
        app:layout_constraintEnd_toEndOf="@id/login_with_email_button"
        app:layout_constraintStart_toStartOf="@id/login_with_email_button"
        android:layout_gravity="bottom|center_horizontal"
        />
    <ImageView
        android:id="@+id/facebook_logo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/facebook_logo"
        app:layout_constraintEnd_toStartOf="@id/login_button"
        app:layout_constraintTop_toTopOf="@id/login_button"
        app:layout_constraintBottom_toBottomOf="@id/login_button"
        />





</androidx.constraintlayout.widget.ConstraintLayout>